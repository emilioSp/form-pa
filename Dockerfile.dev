# Stage 0, "run-stage".
FROM node:14-alpine3.12

ENV HOME /usr/src/app/
ENV USER developers

WORKDIR ${HOME}

# RUN apk add ca-certificates

COPY package*.json ./
RUN npm install
COPY tsconfig.json .
COPY jest.config.js .
COPY src src
COPY public public

RUN adduser --home ${HOME} --shell /bin/sh --disabled-password ${USER}

RUN chown -R ${USER}.${USER} ${HOME}


USER ${USER}

ENTRYPOINT [ "npm", "start" ]
